{
  "name": "doubter",
  "version": "1.0.1",
  "description": "No-hassle runtime type validation and parsing.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc && rollup --external tslib --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "clean": "rimraf './lib' './docs' './coverage'",
    "test": "tsd --files './src/test/**/*.test-d.ts' && jest",
    "perf": "[ -d ./lib ] || npm run build && node --expose-gc --max-old-space-size=4096 ./node_modules/.bin/toofast ./src/test/perf.js",
    "docs:build": "typedoc 'src/main/index.ts' && cp -R ./images ./docs",
    "docs:release": "npm run docs:build && SHA=$(git rev-parse --short HEAD) && ORIGIN=$(git config --get remote.origin.url) && TEMP=$(mktemp -d) && FROM=$(pwd) && git clone -b ghpages --single-branch $ORIGIN $TEMP && cd $TEMP && ls -A | grep -wv .git | xargs rm -rf && cp -R $FROM/docs/ $TEMP && git add . && git commit -m \"Updated docs ($SHA)\" && git push && rm -rf $TEMP"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/doubter.git"
  },
  "keywords": [
    "typings",
    "validate",
    "parse",
    "runtime",
    "union",
    "lazy"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/doubter/issues"
  },
  "homepage": "https://github.com/smikhalevski/doubter#readme",
  "devDependencies": {
    "@badrap/valita": "^0.1.6",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/jest": "^29.2.1",
    "ajv": "^8.11.0",
    "jest": "^29.2.2",
    "myzod": "^1.8.8",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "toofast": "^1.3.1",
    "ts-jest": "^29.0.3",
    "tsd": "^0.24.1",
    "typedoc": "^0.23.19",
    "typescript": "^4.8.4",
    "zod": "^3.19.1"
  },
  "peerDependencies": {
    "tslib": "^2.4.1"
  }
}
