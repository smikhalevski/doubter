{
  "compilerOptions": {
    "importHelpers": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "doubter": [
        "./packages/doubter/src/main"
      ],
      "@doubter/*": [
        "./packages/*/src/main"
      ]
    }
  },
  "include": [
    "./packages/*/src/main/**/*"
  ]
}
