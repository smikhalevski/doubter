{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "./lib"
  },
  "include": ["./src/**/*"]
}
